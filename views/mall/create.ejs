<!--create.ejs-->
<form action="/token/create" method="POST">
    <div class="form-group">
        <label>District</label>
            <select required  class="form-control" name="Mall[district]">
                <option value="">Please select one:</option>
                <option value="Kowloon">Kowloon</option>
                <option value="HK Island">HK Island</option>
                <option value="New Territories">New Territories</option>
            </select>
        </div>

    <div class="form-group">
        <label>Shopping Mall</label>
        <input type="text" class="form-control" name="Mall[name]">
    </div>
  
    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" name="Mall[address]">
    </div>

    <div class="form-group">
        <label>Contact</label>
        <input type="text" class="form-control" name="Mall[Contact]">
    </div>

    <div class="form-group">
        <label>Lat</label>
        <input type="text" class="form-control" name="Mall[lat]">
    </div>

    <div class="form-group">
        <label>Long</label>
        <input type="text" class="form-control" name="Mall[long]">
    </div>

    <div class="form-group">
        <label>Parking fee per hour</label>
        <input type="text" class="form-control" name="Mall[fee]">
    </div>


    <div class="form-group">
        <label>Details</label>
        <input type="text" class="form-control" name="Token[detail]">
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>